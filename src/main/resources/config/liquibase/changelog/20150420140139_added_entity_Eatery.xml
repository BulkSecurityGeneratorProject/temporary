<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Eatery.
    -->
    <changeSet id="20150420140139" author="jhipster">
        <createTable tableName="T_EATERY">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="company_name" type="varchar(255)"/>
            <column name="bus_registration_number" type="varchar(255)"/>
            <column name="billing_number" type="varchar(255)"/>
            <column name="postal_code" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
            <column name="company_contact_number" type="varchar(255)"/>
            <column name="company_fax_number" type="varchar(255)"/>
            <column name="picture_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="picture_id"
                                 baseTableName="T_EATERY"
                                 constraintName="fk_eatery_picture_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_PICTURE"/>

    </changeSet>
</databaseChangeLog>
